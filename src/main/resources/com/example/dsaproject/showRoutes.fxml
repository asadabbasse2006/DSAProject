<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Route Management" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="addRouteBtn" text="âž• Add New Route" onAction="#handleAddRoute"
                style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 12 24; -fx-font-size: 14px; -fx-background-radius: 8; -fx-cursor: hand;"/>
    </HBox>

    <!-- Routes Table -->
    <TableView fx:id="routesTable" VBox.vgrow="ALWAYS" style="-fx-border-color: #e5e7eb; -fx-border-radius: 8;">
        <columns>
            <TableColumn fx:id="routeIdColumn" text="Route ID" prefWidth="100"/>
            <TableColumn fx:id="routeNameColumn" text="Route Name" prefWidth="250"/>
            <TableColumn fx:id="totalStopsColumn" text="Total Stops" prefWidth="120"/>
            <TableColumn fx:id="busNumberColumn" text="Bus Number" prefWidth="150"/>
            <TableColumn fx:id="departureTimeColumn" text="Departure Time" prefWidth="150"/>
            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
        </columns>
    </TableView>
</VBox>