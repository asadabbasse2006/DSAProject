<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dsaproject.Controllers.adminDashboardController"
            style="-fx-background-color: #f3f4f6;">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #1f2937; -fx-padding: 15;">
            <Label text="âš™ï¸ COMSATS Transport - Admin Portal" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Admin User" style="-fx-text-fill: white; -fx-font-size: 14px;"/>

            <Button fx:id="logoutBtn" text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #374151; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="0" style="-fx-background-color: #f3f4f6;">
            <!-- Tab Navigation -->
            <HBox spacing="0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
                <padding>
                    <Insets top="0" right="25" bottom="0" left="25"/>
                </padding>

                <Button fx:id="overviewTab" text="ðŸ  Overview" onAction="#showOverview"
                        style="-fx-background-color: transparent; -fx-padding: 18 25; -fx-font-size: 15px; -fx-border-width: 0 0 3 0; -fx-border-color: #2563eb; -fx-text-fill: #2563eb; -fx-font-weight: bold; -fx-cursor: hand;"/>

                <Button fx:id="routesTab" text="ðŸ“ Routes" onAction="#showRoutes"
                        style="-fx-background-color: transparent; -fx-padding: 18 25; -fx-font-size: 15px; -fx-text-fill: #6b7280; -fx-cursor: hand;"/>

                <Button fx:id="busesTab" text="ðŸšŒ Buses" onAction="#showBuses"
                        style="-fx-background-color: transparent; -fx-padding: 18 25; -fx-font-size: 15px; -fx-text-fill: #6b7280; -fx-cursor: hand;"/>

                <Button fx:id="driversTab" text="ðŸ‘¥ Drivers" onAction="#showDrivers"
                        style="-fx-background-color: transparent; -fx-padding: 18 25; -fx-font-size: 15px; -fx-text-fill: #6b7280; -fx-cursor: hand;"/>
            </HBox>

            <!-- Content Area -->
            <ScrollPane fitToWidth="true" style="-fx-background: #f3f4f6; -fx-background-color: #f3f4f6;">
                <StackPane fx:id="contentArea">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>
                </StackPane>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
