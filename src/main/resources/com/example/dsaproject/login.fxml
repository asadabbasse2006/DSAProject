<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dsaproject.Controllers.LoginController"
            stylesheets="@styles.css"
            styleClass="root-pane">

    <top>
        <VBox alignment="CENTER" spacing="10" styleClass="header-box">
            <padding>
                <Insets top="30" bottom="20"/>
            </padding>
            <Label text="COMSATS University Islamabad" styleClass="header-title"/>
            <Label text="Sahiwal Campus - Transport Management System" styleClass="header-subtitle"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" maxWidth="400">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <Label text="Login" styleClass="form-title"/>

            <VBox spacing="15" styleClass="form-container">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>

                <VBox spacing="5">
                    <Label text="Email" styleClass="form-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="form-field"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="form-field"/>
                </VBox>

                <HBox spacing="10" alignment="CENTER">
                    <RadioButton fx:id="studentRadio" text="Student" selected="true" styleClass="radio-button">
                        <toggleGroup>
                            <ToggleGroup fx:id="userTypeGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="adminRadio" text="Admin" toggleGroup="$userTypeGroup" styleClass="radio-button"/>
                </HBox>

                <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>

                <Button text="Login" onAction="#handleLogin" styleClass="primary-button" maxWidth="Infinity"/>

                <Hyperlink text="Don't have an account? Sign up" onAction="#handleSignup" styleClass="link"/>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <padding>
                <Insets top="20" bottom="20"/>
            </padding>
            <Label text="Â© 2024 COMSATS University | Data Structures Project" styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane>