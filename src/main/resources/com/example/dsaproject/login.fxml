<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dsaproject.Controllers.loginController"
            style="-fx-background-color: linear-gradient(to bottom right, #2563eb, #1e40af);">

    <center>
        <VBox alignment="CENTER" maxWidth="450" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Logo -->
            <Label text="ðŸšŒ" style="-fx-font-size: 60px;"/>

            <!-- Title -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="COMSATS Transport" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
                <Label text="Sahiwal Campus" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            </VBox>

            <Separator prefWidth="200.0"/>

            <!-- Email Field -->
            <VBox spacing="8">
                <Label text="Email" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <TextField fx:id="emailField" promptText="your.email@example.com"
                           style="-fx-padding: 12; -fx-border-color: #d1d5db; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8">
                <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <PasswordField fx:id="passwordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                               style="-fx-padding: 12; -fx-border-color: #d1d5db; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" style="-fx-text-fill: #dc2626; -fx-font-size: 12px;" visible="false"/>

            <!-- Login Buttons -->
            <Button fx:id="studentLoginBtn" text="Login as Student" maxWidth="Infinity"
                    onAction="#handleStudentLogin"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 14; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>

            <Button fx:id="adminLoginBtn" text="Login as Admin" maxWidth="Infinity"
                    onAction="#handleAdminLogin"
                    style="-fx-background-color: #4b5563; -fx-text-fill: white; -fx-padding: 14; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>

            <!-- Signup Link -->
            <Hyperlink fx:id="signupLink" text="Don't have an account? Sign Up"
                       onAction="#handleSignup"
                       style="-fx-text-fill: #2563eb; -fx-font-size: 13px;"/>
        </VBox>
    </center>
</BorderPane>