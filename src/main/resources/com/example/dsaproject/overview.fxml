<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="25">

    <!-- Statistics Grid -->
    <GridPane hgap="20" vgap="20">
        <!-- Total Buses -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="250">
            <Label text="Total Buses" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="totalBusesLabel" text="12" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
        </VBox>

        <!-- Active Routes -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250">
            <Label text="Active Routes" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="activeRoutesLabel" text="8" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #3b82f6;"/>
        </VBox>

        <!-- Total Drivers -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" GridPane.columnIndex="2" GridPane.rowIndex="0" prefWidth="250">
            <Label text="Total Drivers" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="totalDriversLabel" text="15" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #10b981;"/>
        </VBox>

        <!-- Today's Bookings -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="250">
            <Label text="Today's Bookings" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
            <Label fx:id="todayBookingsLabel" text="156" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: #8b5cf6;"/>
        </VBox>
    </GridPane>

    <!-- Bus Occupancy Report -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">
        <Label text="Bus Occupancy Report" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>

        <VBox fx:id="occupancyReportContainer" spacing="15"/>
    </VBox>
</VBox>
