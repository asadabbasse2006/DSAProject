<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.dsaproject.Controllers.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Logo/Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="COMSATS" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
        <Label text="Transport Management System" style="-fx-font-size: 16px; -fx-text-fill: #666;"/>
    </VBox>

    <!-- Login Form -->
    <VBox alignment="CENTER" spacing="15" maxWidth="400" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">

        <!-- Error Label -->
        <Label fx:id="errorLabel" text="Error message" textFill="red" wrapText="true"
               style="-fx-font-size: 12px;" visible="false"/>

        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email Address" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" promptText="Enter your email"
                       prefHeight="40" style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label text="Password" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password"
                           prefHeight="40" style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- User Type Selection -->
        <VBox spacing="5">
            <Label text="Login As" style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
            <HBox spacing="20" alignment="CENTER_LEFT">
                <RadioButton fx:id="studentRadio" text="Student" selected="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="userTypeGroup"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="adminRadio" text="Admin" toggleGroup="$userTypeGroup"/>
            </HBox>
        </VBox>

        <!-- Progress Indicator -->
        <ProgressIndicator fx:id="progressIndicator" visible="false" prefWidth="30" prefHeight="30"/>

        <!-- Login Button -->
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                prefHeight="45" maxWidth="Infinity"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <!-- Signup Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Hyperlink fx:id="signupLink" text="Sign Up" onAction="#handleSignup"
                       style="-fx-font-size: 12px;"/>
        </HBox>
    </VBox>

    <!-- Footer -->
    <Label text="Â© 2024 COMSATS University" style="-fx-font-size: 11px; -fx-text-fill: #999;">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>
    </Label>
</VBox>