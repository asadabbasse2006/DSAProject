<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dsaproject.Controllers.LoginController"
            stylesheets="@/com/example/dsaproject/CSS/Styles.css"
            styleClass="root-pane">

    <!-- ============================= HEADER =============================== -->
    <top>
        <VBox alignment="CENTER" spacing="10" styleClass="header-box">
            <padding>
                <Insets top="40" bottom="30"/>
            </padding>

            <Label text="COMSATS UNIVERSITY ISLAMABAD" styleClass="header-title">
                <font><Font size="32" name="System Bold"/></font>
            </Label>

            <Label text="Sahiwal Campus - Transport Management System"
                   styleClass="header-subtitle">
                <font><Font size="16"/></font>
            </Label>

            <Label text="ðŸšŒ" styleClass="icon-large">
                <font><Font size="48"/></font>
            </Label>
        </VBox>
    </top>

    <!-- ============================== CENTER ============================== -->
    <center>
        <VBox alignment="CENTER" spacing="25" maxWidth="450">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <!-- Title -->
            <Label text="Welcome Back" styleClass="form-title">
                <font><Font size="28" name="System Bold"/></font>
            </Label>

            <Label text="Sign in to continue" styleClass="subtitle-text">
                <font><Font size="14"/></font>
            </Label>

            <!-- Form Container Card -->
            <VBox spacing="20" styleClass="form-container">
                <padding>
                    <Insets top="35" right="45" bottom="35" left="45"/>
                </padding>

                <!-- Email Field -->
                <VBox spacing="8">
                    <Label text="Email Address" styleClass="form-label">
                        <font><Font size="13" name="System Bold"/></font>
                    </Label>

                    <TextField fx:id="emailField"
                               promptText="Enter your email"
                               prefHeight="40"
                               styleClass="form-field"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" styleClass="form-label">
                        <font><Font size="13" name="System Bold"/></font>
                    </Label>

                    <PasswordField fx:id="passwordField"
                                   promptText="Enter your password"
                                   prefHeight="40"
                                   styleClass="form-field"/>
                </VBox>

                <!-- User Type -->
                <VBox spacing="10">
                    <Label text="Login as:" styleClass="form-label">
                        <font><Font size="13" name="System Bold"/></font>
                    </Label>

                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <RadioButton fx:id="studentRadio"
                                     text="Student"
                                     selected="true"
                                     toggleGroup="$userTypeGroup"
                                     styleClass="radio-button">
                            <font><Font size="13"/></font>
                        </RadioButton>

                        <RadioButton fx:id="adminRadio"
                                     text="Administrator"
                                     toggleGroup="$userTypeGroup"
                                     styleClass="radio-button">
                            <font><Font size="13"/></font>
                        </RadioButton>
                    </HBox>
                </VBox>

                <!-- Error Label -->
                <Label fx:id="errorLabel"
                       visible="false"
                       wrapText="true"
                       styleClass="error-label">
                    <font><Font size="12"/></font>
                </Label>

                <!-- Progress Indicator -->
                <ProgressIndicator fx:id="progressIndicator"
                                   visible="false"
                                   prefWidth="30"
                                   prefHeight="30"/>

                <!-- Login Button -->
                <Button fx:id="loginButton"
                        text="Login"
                        onAction="#handleLogin"
                        prefHeight="45"
                        maxWidth="Infinity"
                        styleClass="primary-button">
                    <font><Font size="14" name="System Bold"/></font>
                </Button>

                <!-- Signup Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" styleClass="normal-text">
                        <font><Font size="12"/></font>
                    </Label>

                    <Hyperlink fx:id="signupLink"
                               text="Sign up here"
                               onAction="#handleSignup"
                               styleClass="link">
                        <font><Font size="12" name="System Bold"/></font>
                    </Hyperlink>
                </HBox>
            </VBox>

            <!-- Info Box: Demo Credentials -->
            <VBox spacing="5" alignment="CENTER" styleClass="info-box">
                <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>

                <Label text="ðŸ“ Demo Credentials" styleClass="info-title">
                    <font><Font size="12" name="System Bold"/></font>
                </Label>

                <Label text="Student: ahmed@student.comsats.edu.pk / student123"
                       styleClass="info-text">
                    <font><Font size="11"/></font>
                </Label>

                <Label text="Admin: admin@comsats.edu.pk / admin123"
                       styleClass="info-text">
                    <font><Font size="11"/></font>
                </Label>
            </VBox>
        </VBox>
    </center>

    <!-- =============================== FOOTER ============================= -->
    <bottom>
        <HBox alignment="CENTER" styleClass="footer">
            <padding><Insets top="20" bottom="20"/></padding>

            <Label text="Â© 2024 COMSATS University | Data Structures Project by Asad Abbas"
                   styleClass="footer-text">
                <font><Font size="11"/></font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>
