<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.dsaproject.Controllers.adminDashboardController"
            styleClass="dashboard-root">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="admin-header">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>

            <!-- Logo/Title -->
            <VBox spacing="2">
                <Label text="âš™ï¸ COMSATS Transport" styleClass="dashboard-logo">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Label>
                <Label text="Admin Control Panel" styleClass="dashboard-subtitle">
                    <font>
                        <Font size="11"/>
                    </font>
                </Label>
            </VBox>

            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Admin Info -->
            <VBox alignment="CENTER_RIGHT" spacing="2">
                <Label fx:id="welcomeLabel" text="Admin User" styleClass="welcome-label">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Label>
                <Label fx:id="emailLabel" text="admin@comsats.edu.pk" styleClass="email-label">
                    <font>
                        <Font size="11"/>
                    </font>
                </Label>
            </VBox>

            <!-- Logout Button -->
            <Button text="Logout" onAction="#handleLogout" styleClass="logout-button">
                <font>
                    <Font size="12"/>
                </font>
            </Button>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="8" styleClass="sidebar-admin" minWidth="220" maxWidth="220">
            <padding>
                <Insets top="25" right="15" bottom="25" left="15"/>
            </padding>

            <!-- Dashboard Section -->
            <Label text="OVERVIEW" styleClass="sidebar-section-title">
                <font>
                    <Font name="System Bold" size="11"/>
                </font>
            </Label>

            <Button fx:id="dashboardBtn" text="ðŸ“Š  Dashboard" onAction="#showDashboard"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="reportsBtn" text="ðŸ“ˆ  Reports" onAction="#showReports"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Separator/>

            <!-- Management Section -->
            <Label text="MANAGEMENT" styleClass="sidebar-section-title">
                <font>
                    <Font name="System Bold" size="11"/>
                </font>
                <padding>
                    <Insets top="10"/>
                </padding>
            </Label>

            <Button fx:id="routesBtn" text="ðŸ—ºï¸  Routes" onAction="#showRoutes"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="busesBtn" text="ðŸšŒ  Buses" onAction="#showBuses"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="driversBtn" text="ðŸ‘¤  Drivers" onAction="#showDrivers"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="usersBtn" text="ðŸ‘¥  Users" onAction="#showUsers"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Separator/>

            <!-- Operations Section -->
            <Label text="OPERATIONS" styleClass="sidebar-section-title">
                <font>
                    <Font name="System Bold" size="11"/>
                </font>
                <padding>
                    <Insets top="10"/>
                </padding>
            </Label>

            <Button fx:id="bookingsBtn" text="ðŸ“‹  Bookings" onAction="#showBookings"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <Button fx:id="waitingListBtn" text="â³  Waiting List" onAction="#showWaitingList"
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT">
                <font>
                    <Font size="13"/>
                </font>
            </Button>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Quick Stats -->
            <Separator/>
            <Label text="SYSTEM STATS" styleClass="sidebar-section-title">
                <font>
                    <Font name="System Bold" size="11"/>
                </font>
                <padding>
                    <Insets top="10"/>
                </padding>
            </Label>

            <GridPane hgap="10" vgap="8" styleClass="stats-box">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <Label text="Routes:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="stat-label">
                    <font>
                        <Font size="11"/>
                    </font>
                </Label>
                <Label fx:id="totalRoutesLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="stat-value">
                    <font>
                        <Font name="System Bold" size="11"/>
                    </font>
                </Label>

                <Label text="Buses:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="stat-label">
                    <font>
                        <Font size="11"/>
                    </font>
                </Label>
                <Label fx:id="totalBusesLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="stat-value">
                    <font>
                        <Font name="System Bold" size="11"/>
                    </font>
                </Label>

                <Label text="Drivers:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="stat-label">
                    <font>
                        <Font size="11"/>
                    </font>
                </Label>
                <Label fx:id="totalDriversLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="stat-value">
                    <font>
                        <Font name="System Bold" size="11"/>
                    </font>
                </Label>

                <Label text="Active:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="stat-label">
                    <font>
                        <Font size="11"/>
                    </font>
                </Label>
                <Label fx:id="activeBookingsLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="stat-value">
                    <font>
                        <Font name="System Bold" size="11"/>
                    </font>
                </Label>
            </GridPane>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <!-- Dynamic content loaded here -->
        </StackPane>
    </center>
</BorderPane>