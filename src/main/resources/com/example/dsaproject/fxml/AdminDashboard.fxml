<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.dsaproject.Controllers.adminDashboardController"
            prefHeight="750" prefWidth="1280">

    <!-- Top Header -->
    <top>
        <VBox style="-fx-background-color: #673AB7; -fx-padding: 15;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="COMSATS Transport - Admin Panel"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="welcomeLabel" text="Admin"
                           style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Label fx:id="emailLabel" text="admin@comsats.edu.pk"
                           style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                </VBox>

                <Button text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20;"/>
            </HBox>

            <!-- Stats Bar -->
            <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20 0 10 0;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Total Routes" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                    <Label fx:id="totalRoutesLabel" text="0"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>

                <Separator orientation="VERTICAL" prefHeight="50" style="-fx-background-color: rgba(255,255,255,0.3);"/>

                <VBox alignment="CENTER" spacing="5">
                    <Label text="Total Buses" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                    <Label fx:id="totalBusesLabel" text="0"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>

                <Separator orientation="VERTICAL" prefHeight="50" style="-fx-background-color: rgba(255,255,255,0.3);"/>

                <VBox alignment="CENTER" spacing="5">
                    <Label text="Total Drivers" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                    <Label fx:id="totalDriversLabel" text="0"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>

                <Separator orientation="VERTICAL" prefHeight="50" style="-fx-background-color: rgba(255,255,255,0.3);"/>

                <VBox alignment="CENTER" spacing="5">
                    <Label text="Active Bookings" style="-fx-font-size: 11px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                    <Label fx:id="activeBookingsLabel" text="0"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="5" style="-fx-background-color: #263238; -fx-padding: 20 0; -fx-pref-width: 220;">

            <Label text="ADMIN MENU" style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px; -fx-padding: 10 20;"/>

            <Button fx:id="dashboardBtn" text="ðŸ“Š  Dashboard" onAction="#showDashboard" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Separator style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 5 0;"/>

            <Label text="MANAGEMENT" style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px; -fx-padding: 10 20;"/>

            <Button fx:id="routesBtn" text="ðŸš  Routes" onAction="#showRoutes" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Button fx:id="busesBtn" text="ðŸšŒ  Buses" onAction="#showBuses" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Button fx:id="driversBtn" text="ðŸ‘¨  Drivers" onAction="#showDrivers" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Separator style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 5 0;"/>

            <Label text="OPERATIONS" style="-fx-text-fill: rgba(255,255,255,0.5); -fx-font-size: 11px; -fx-padding: 10 20;"/>

            <Button fx:id="bookingsBtn" text="ðŸ“‹  Bookings" onAction="#showBookings" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Button fx:id="waitingListBtn" text="â³  Waiting List" onAction="#showWaitingList" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Button fx:id="usersBtn" text="ðŸ‘¥  Users" onAction="#showUsers" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>

            <Separator style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 5 0;"/>

            <Button fx:id="reportsBtn" text="ðŸ“ˆ  Reports" onAction="#showReports" maxWidth="Infinity"
                    styleClass="nav-button" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand;"/>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>